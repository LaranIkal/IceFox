# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                       controllers.HomeController.index

POST    /icefoxlogin            controllers.Authenticate.iceFoxLogin


GET     /Content                controllers.Content.listPagesCategories
GET     /content/:cid           controllers.Content.listPages(cid: Long)
GET     /content/:pid/:mode     controllers.Content.showPage(pid: Long, mode: String, page: Int ?= 1)

GET     /ManageMessage/:mid     controllers.ManageMessage.editMessage(mid: Long)
POST    /ManageMessage          controllers.ManageMessage.updateMessage

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
